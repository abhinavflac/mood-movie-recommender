# ============================================
# MovieMood - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ===================
# TMDB API (Required)
# ===================
# Get your free API key at: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# ===================
# Database (Optional)
# ===================
# Default: SQLite (no config needed)
# For PostgreSQL, uncomment and fill in:
# DATABASE_URL=postgresql://username:password@localhost:5432/movie_mood_db

# For MySQL, uncomment and fill in:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/movie_mood_db

# ===================
# API Settings
# ===================
API_HOST=0.0.0.0
API_PORT=8000

# ===================
# Frontend Settings
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000
